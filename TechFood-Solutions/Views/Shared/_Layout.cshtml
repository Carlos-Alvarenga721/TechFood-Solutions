<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechFood_Solutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechFood_Solutions.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#e74c3c;">
            <div class="container">
                <a class="navbar-brand fw-bold text-white" href="/">
                    <img src="~/images/login-bag.png" alt="TechFood" width="40" class="me-2">
                    TechFood
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link text-white" href="/Home/Menu">Menu</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Home/Contacto">Contacto</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Home/SobreNosotros">Sobre Nosotros</a></li>
                        <li class="nav-item"><a class="nav-link text-white fw-bold" href="/Account/Login">Iniciar Sesión</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>Soporte Técnico</h5>
                    <p>Antiguo Cuscatlán, El Salvador</p>
                    <p>TechFood@gmail.com</p>
                    <p>+503-7258-1524</p>
                </div>
                <div class="col-md-4">
                    <h5>Cuenta</h5>
                    <p><a href="/Account/Login" class="text-white">Iniciar Sesión / Registrarse</a></p>
                    <p><a href="/Carrito" class="text-white">Carrito</a></p>
                    <p><a href="/Tienda" class="text-white">Tienda</a></p>
                </div>
                <div class="col-md-4">
                    <h5>Redes Sociales</h5>
                    <a href="#" class="text-white me-2"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-white me-2"><i class="bi bi-linkedin"></i></a>
                    <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                </div>
            </div>
            <hr class="border-light">
            <p class="text-center mb-0">© Copyright Rimmel 2025. All rights reserved</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
