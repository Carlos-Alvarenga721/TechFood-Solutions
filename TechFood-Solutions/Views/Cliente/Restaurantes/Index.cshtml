@model IEnumerable<TechFood_Solutions.Models.Restaurant>

<h1>Restaurantes Disponibles</h1>

@foreach (var restaurante in Model)
{
    <div class="restaurante">
        <img src="@restaurante.LogoUrl" alt="@restaurante.Nombre" width="100" />
        <h2>@restaurante.Nombre</h2>
        <p>@restaurante.Descripcion</p>
        <a asp-action="Menu" asp-route-id="@restaurante.Id">Ver Menú</a>
    </div>
}
