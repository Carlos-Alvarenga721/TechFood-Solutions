                    console.log('?? Editando producto:', this.href);
                });
            });

            // Funcionalidad para acciones rápidas
            document.querySelectorAll('.quick-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    if (this.href === '#') {
                        e.preventDefault();
                        console.log('?? Funcionalidad en desarrollo');
                        alert('Esta funcionalidad estará disponible próximamente');
                    } else {
                        console.log('?? Navegando a:', this.href);
                    }
                });
            });

            // Efecto hover en cards de estadísticas
            document.querySelectorAll('.stat-card').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    console.log('?? Viendo estadística:', this.querySelector('.stat-label').textContent);
                });
            });

            console.log('? Dashboard Asociado inicializado - Estado de menú detectado correctamente');
        });
    </script>
}