    <div><strong>?? DEBUG - INDEX ASOCIADO:</strong></div>
    <div>Restaurant ID: @Model.Id</div>
    <div>Productos: @(Model.MenuItems?.Count() ?? 0)</div>
    @if (Model.MenuItems?.Any() == true)
    {
        <div>Ruta imagen: /images/items/restaurant_@(Model.Id)/</div>
        <div>Ejemplo: @Model.MenuItems.First().ImagenUrl</div>
    }
    else
    {
        <div style="color: #ffc107;">?? MENÚ VACÍO - Mostrando estado sin productos</div>
