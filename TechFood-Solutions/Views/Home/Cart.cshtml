@{
    ViewBag.Title = "Carrito";
    Layout = null; // Para que no interfiera el _Layout.cshtml
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - TechFood</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fff;
            font-family: Arial, sans-serif;
        }

        .cart-container {
            margin-top: 40px;
        }

        .cart-table th {
            background-color: #f8f9fa;
        }

        .cart-summary {
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 5px;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .apply-coupon input {
            max-width: 200px;
        }

        footer {
            background-color: #000;
            color: white;
            padding: 30px 0;
            margin-top: 50px;
        }

            footer a {
                color: white;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .apply-coupon input {
            max-width: 150px; 
            width: 100%; 
            max-height: 150px;
            height: 100%
        }

        .apply-coupon button {
            flex-shrink: 0;
            max-width: 150px;
            width: 100%;
            max-height: 150px;
            height: 100%
        }

    </style>
</head>
<body>
    <div class="container cart-container">
        <h3 class="mb-4">Carrito</h3>
        <table class="table cart-table align-middle">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th style="width:120px;">Cantidad</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="~/images/pizza.png" alt="Pizza Pepperoni" width="60" class="me-2" />
                        Pizza Pepperoni
                    </td>
                    <td>$12.50</td>
                    <td>
                        <select class="form-select">
                            <option>01</option>
                            <option>02</option>
                            <option>03</option>
                        </select>
                    </td>
                    <td>$12.50</td>
                </tr>
                <tr>
                    <td>
                        <img src="~/images/palitroques.png" alt="Palitroques" width="60" class="me-2" />
                        Palitroques
                    </td>
                    <td>$3.75</td>
                    <td>
                        <select class="form-select">
                            <option>01</option>
                            <option selected>02</option>
                            <option>03</option>
                        </select>
                    </td>
                    <td>$3.75</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mb-4">
            <a href="#" class="btn btn-outline-dark">Regresar al menú</a>
            <a href="#" class="btn btn-outline-dark">Agregar al Carrito</a>
        </div>

        <div class="row">
            <div class="col-md-6 apply-coupon d-flex gap-2 mb-3">
                <input type="text" class="form-control" placeholder="Código" />
                <button class="btn btn-danger">Aplicar Cupón</button>
            </div>

            <div class="col-md-6">
                <div class="cart-summary">
                    <h5>Suma</h5>
                    <p>Subtotal: <span class="float-end">$16.25</span></p>
                    <p>Envío: <span class="float-end">$2.50</span></p>
                    <hr />
                    <p><strong>Total: <span class="float-end">$18.75</span></strong></p>
                    <button class="btn btn-danger w-100">Ir a Pagar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6>Soporte Técnico</h6>
                    <p>Antiguo Cuscatlán, El Salvador</p>
                    <p>TechFood@gmail.com</p>
                    <p>+503-7258-1524</p>
                </div>
                <div class="col-md-4">
                    <h6>Cuenta</h6>
                    <p><a href="#">Mi cuenta</a></p>
                    <p><a href="#">Iniciar Sesión / Registrarse</a></p>
                    <p><a href="#">Carrito</a></p>
                    <p><a href="#">Tienda</a></p>
                </div>
                <div class="col-md-4">
                    <h6>Redes Sociales</h6>
                    <p>
                        <a href="#">X</a> |
                        <a href="#">Instagram</a> |
                        <a href="#">LinkedIn</a> |
                        <a href="#">Facebook</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
